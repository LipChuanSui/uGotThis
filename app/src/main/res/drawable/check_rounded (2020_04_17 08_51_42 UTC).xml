<?xml version="1.0" encoding="utf-8"?>
<!--this xml is for checkbox in task list,
when checkbox is checked, a checked image will replace unchecked image,
this is for attractive, the image used is made using photoshop because i want to create customised
checkbox which use secondary light color and tick icon which use secondary dark color-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true"
        android:drawable="@drawable/checked" />
    <item android:state_pressed="true"
        android:drawable="@drawable/checked" />
    <item android:state_pressed="false"
        android:drawable="@drawable/unchecked" />
</selector>